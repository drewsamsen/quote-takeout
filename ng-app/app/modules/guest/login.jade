section
  h5.grey-text.text-darken-1
    | What is this?
  p Books and quotes, yall

.divider(ng-style="{'margin-bottom': '15px'}")

section
  .row
    .col.s6
      .card.amber.lighten-5
        .card-content
          h5 Log in

          form(name="loginForm"
            ng-submit="submitLogin(credentials)"
            novalidate)
            .row
              .input-field.col.s12
                input(ng-model="credentials.email" type="email" required  ng-minlength="8")
                label Email
            .row
              .input-field.col.s12
                input(ng-model="credentials.password" type="password" required)
                label Password
            .row
              .input-field.col.s12
                button.waves-effect.waves-light.btn(type="submit"
                  ng-class="{disabled: loginForm.$invalid}")
                  | Log In
                | &nbsp;&nbsp;&nbsp;
                a(href="" ng-click="forgotPassword()").blue-text.text-lighten-3 Forgot your password?

    .col.s6
      .card.amber.lighten-5
        .card-content
          h5 Sign up

          form(name="signupForm"
            ng-submit="submitRegistration(signup)"
            novalidate)

            .row
              .input-field.col.s12
                input(ng-model="signup.email" type="email" required)
                label Email
            .row
              .input-field.col.s6
                input(ng-model="signup.password" type="password" required)
                label Password
              .input-field.col.s6
                input(ng-model="signup.password_confirmation" type="password" required)
                label Confirmation
            .row
              .input-field.col.s6
                button.waves-effect.waves-light.btn(type="submit"
                  ng-class="{disabled: signupForm.$invalid}")
                  | Sign up

.divider

section
